<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}</title>
  <link href="launcher.min.css" rel="stylesheet">
  <!-- TODO: Download Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer">
</head>
<body class="bg-zinc-100 dark:bg-zinc-900">
  <div class="sm:container sm:mx-auto px-6 py-12">
    <!-- Header -->
    <a href=""><h1 class="text-5xl font-bold dark:text-gray-100">{{ page_title }}</h1></a>
    <hr class="mt-5 my-6">
    {%+ if announcement is defined -%}
    <!-- Announcement banner -->
    <div class="rounded-t-md bg-yellow-400 py-2 px-5">
      <p class="text-lg font-semibold">
        <i class="fa-md {{ announcement.icon }}"></i>&nbsp;
        {{ announcement.title }}
      </p>
    </div>
    <div class="rounded-b-md bg-neutral-200 dark:bg-neutral-800 dark:text-gray-100 py-3 px-5 text-md">
      {{ announcement.content }}
    </div>
    {%- endif +%}
    <!-- Link tiles -->
    {%+ for category in services -%}
    {%+ if loop.index0 % 3 == 0 -%}
    <div class="md:flex md:flex-row py-6">
    {%- endif +%}
      <div class="basis-1/3 md:pr-6">
        <h1 class="text-2xl font-semibold dark:text-gray-100"><i class="fa-fw {{ category.icon }}"></i> {{ category.name }}</h1>
        {%- for app in category.apps +%}
        <a href="{{ app.url }}" {% if app.newtab is defined and app.newtab %}rel="noopener noreferrer" target="_blank"{% endif %}>
          <div class="rounded-lg bg-neutral-200 hover:bg-neutral-300 dark:bg-neutral-800 dark:hover:bg-neutral-700 flex flex-row py-4 px-2 dark:text-gray-200 my-3">
            <div class="basis-1/6 text-center"><i class="fa-xl fa-fw {{ app.icon }}"></i></div>
            <div class="basis-5/6 text-lg">{{ app.name }}</div>
          </div>
        </a>
        {%- endfor +%}
      </div>
    {%- if loop.index0 % 3 == 2 or loop.last +%}
    </div>
    {% endif +%}
    {%- endfor +%}
  </div>
</body>
</html>
